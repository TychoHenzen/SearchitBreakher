<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0-windows</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <UseWindowsForms>true</UseWindowsForms>
    </PropertyGroup>
    <ItemGroup>
        <!-- Fallback clipboard support for non-Windows platforms -->
        <PackageReference Include="Microsoft.Extensions.FileSystemGlobbing" Version="10.0.0-preview.4.25258.110"/>
        <PackageReference Include="TextCopy" Version="*"/>
        <PackageReference Include="TiktokenSharp" Version="1.1.7"/>
    </ItemGroup>
</Project>
